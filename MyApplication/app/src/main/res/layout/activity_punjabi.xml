<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aaraf.myapplication.punjabiActivity">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/imageView"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="225dp"
        android:layout_height="65dp"
        android:text="100% cotton shirt. Made in Bangladesh."
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="112dp"
        android:layout_height="65dp"
        android:text="Price"
        android:id="@+id/btnPrice"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:layout_width="112dp"
        android:layout_height="65dp"
        android:text="BDT 2190"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/btnPrice"
        android:layout_toEndOf="@+id/btnPrice" />

    <Button
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:text="Colors"
        android:id="@+id/btnColor"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:text="White,Blue"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/btnColor"
        android:layout_toRightOf="@+id/btnColor"
        android:layout_toEndOf="@+id/btnColor" />

    <Button
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:text="Sizes"
        android:id="@+id/btnSize"
        android:layout_below="@+id/btnColor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:text="Small,Medium,Large"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/btnSize"
        android:layout_toRightOf="@+id/btnSize"
        android:layout_toEndOf="@+id/btnSize" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/imageView2"

        android:layout_below="@+id/btnSize"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="225dp"
        android:layout_height="65dp"
        android:text="100% cotton shirt. Made in Bangladesh."
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="112dp"
        android:layout_height="65dp"
        android:text="Price"
        android:id="@+id/btnPrice_2"
        android:layout_below="@+id/textView5"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <TextView
        android:layout_width="112dp"
        android:layout_height="65dp"
        android:text="BDT 2190"
        android:id="@+id/textView6"
        android:layout_alignBottom="@+id/btnPrice_2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:text="Colors"
        android:id="@+id/btnColor_2"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:text="Green,purple"
        android:id="@+id/textView7"
        android:layout_below="@+id/btnPrice_2"
        android:layout_toRightOf="@+id/btnColor_2"
        android:layout_toEndOf="@+id/btnColor_2" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:text="Sizes"
        android:id="@+id/btnSize_2"
        android:layout_below="@+id/btnColor_2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:text="Small,Medium,Large"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_toRightOf="@+id/btnColor_2"
        android:layout_toEndOf="@+id/btnColor_2" />

</RelativeLayout>
