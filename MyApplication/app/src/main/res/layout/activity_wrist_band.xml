<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aaraf.myapplication.wristBandActivity">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/artistiView"
        android:src="@drawable/wristband_logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="220dp"
        android:layout_height="130dp"
        android:text="wrist Band house Bangladesh."
        android:id="@+id/txtArtisti"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/artistiView"
        android:layout_toEndOf="@+id/artistiView" />
    <Button
        android:layout_width="175dp"
        android:layout_height="65dp"
        android:text="Name Band"
        android:id="@+id/btnNameBand"
        android:layout_below="@+id/artistiView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="175dp"
        android:layout_height="65dp"
        android:text="Custom Band"
        android:id="@+id/btnCustomBand"
        android:layout_below="@+id/txtArtisti"
        android:layout_toRightOf="@+id/btnNameBand"
        android:layout_toEndOf="@+id/btnNameBand" />

    <Button
        android:layout_width="175dp"
        android:layout_height="65dp"
        android:text="Photo Mug"
        android:id="@+id/btnPhotoMug"
        android:layout_below="@+id/btnNameBand"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="175dp"
        android:layout_height="65dp"
        android:text="Pin Badges"
        android:id="@+id/btnPinBadges"
        android:layout_below="@+id/btnCustomBand"
        android:layout_toRightOf="@+id/btnNameBand"
        android:layout_toEndOf="@+id/btnNameBand" />

    <Button
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:text="Location"
        android:id="@+id/btnOthers"
        android:onClick="wlocPressed"
        android:layout_below="@+id/btnPhotoMug"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
